<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextArea?>
<AnchorPane prefHeight="355.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.taskcontroller.addNewBasicTask">
    <children>
        <BorderPane prefHeight="360.0" prefWidth="400.0">
            <AnchorPane prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                <children>
                    <Label layoutX="53.0" layoutY="25.0" prefHeight="41.0" prefWidth="93.0" text="Task">
                        <font>
                            <Font name="SansSerif Regular" size="20.0" />
                        </font>
                    </Label>
                    <Label layoutX="52.0" layoutY="109.0" prefHeight="42.0" prefWidth="123.0" text="Description">
                        <font>
                            <Font name="SansSerif Regular" size="20.0" />
                        </font>
                    </Label>
                    <TextField fx:id="TaskNameField" layoutX="50.0" layoutY="151.0" prefHeight="101.0" prefWidth="517.0" />
                    <TextArea fx:id="DescriptionField" layoutX="54.0" layoutY="66.0" prefHeight="31.0" prefWidth="513.0" >
                        <font>
                            <Font name="SansSerif Regular" size="13.0" />
                        </font>
                    </TextArea>
                    <Button fx:id="okBtn" layoutX="196.0" layoutY="307.0" mnemonicParsing="false" onAction="#okBtnClick" prefHeight="27.0" prefWidth="101.0" text="Ok">
                        <font>
                            <Font name="SansSerif Regular" size="15.0" />
                        </font>
                    </Button>
                    <Button fx:id="cancelBtn" layoutX="351.0" layoutY="306.0" mnemonicParsing="false" onAction="#cancelBtnClick" prefHeight="27.0" prefWidth="99.0" text="Cancel">
                        <font>
                            <Font name="SansSerif Regular" size="15.0" />
                        </font>
                    </Button>
                </children>
            </AnchorPane>
        </BorderPane>
    </children>
</AnchorPane>
